        <record model="ir.ui.view" id="view_order_form_destination_fields">
            <field name="name">sale.order.destination</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">        
               <xpath expr="//notebook/page//field[@name='order_line']//form//field[@name='name']" position="after">
                   <group>
                       <field name="use_text_description"/>
                   </group>   
               </xpath>
               <xpath expr="//notebook/page//field[@name='order_line']//tree//field[@name='name']" position="before">
                   <field name="use_text_description" invisible="1"/>
               </xpath>
               <xpath expr="//notebook/page//field[@name='order_line']//tree" position="attributes">
                   <attribute name="colors">blue:use_text_description==True</attribute>
               </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_picking_force_name_move_form">
            <field name="name">stock.move.note.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">            
                    <field name="use_text_description"/>
                    <label for="use_text_description"
               </field>
            </field>
        </record>
        
