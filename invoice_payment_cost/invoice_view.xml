<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_view_payment_refund_form">
            <field name="name">account.payment.term.form</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <field name="note" position="after">
                    <group cospan="4" name="Refund" col="4">
                        <separator string="Redund information:" colspan="4"/>
                        <field name="has_refund" />
                        <newline />
                        <field name="refund_account_id" attrs="{'required':[('has_refund','=',True)],'invisible':[('has_refund','=',False)]}"/> <!--TODO domain filter?-->
                        <field name="refund_product_id" attrs="{'required':[('has_refund','=',True)],'invisible':[('has_refund','=',False)]}"/> <!--TODO domain filter?-->
                        <field name="refund_cost" attrs="{'required':[('has_refund','=',True)],'invisible':[('has_refund','=',False)]}"/>
                    </group>
                </field>
            </field>
        </record>
    </data>
</openerp>


