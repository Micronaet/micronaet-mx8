<?xml version="1.0"?>
<openerp>
    <data>
    <record model="ir.ui.view" id="view_res_partner_input_form">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="String" version="7.0">        
                <sheet>
                    <group col="4" colspan="4">
                        <field name="is_company"/> 
                        <field name="name" required="1"/>
                        <notebook colspan="4">
                            <page string="Address">
                                <group col="4" colspan="4">
                                    <field name="use_parent_address" invisible="1"/>
                                    <field name="street" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                    <field name="zip_id" attrs="{'invisible': [('use_parent_address','=',True)]}"/>
                                    <field name="city" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                    <field name="state_id" on_change="onchange_state(state_id)"/>
                                    <field name="zip" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                    <field name="zone_id" required="1"/>
                                    <field name="country_id" attrs="{'readonly': [('use_parent_address','=',True)]}"/>                                
                                </group>
                            </page>
                        </notebook>
                                          
                        <notebook colspan="4">
                            <page string="Information">
                                <group col="4" colspan="4">
                                    <field name="phone" required="1"/>
                                    <field name="email" required="1"/>
                                    <field name="newsletter_category_id" required="1"/>
                                    <field name="agent_id" required ="1"/>
                                    <field name="website"/> 
                                    <field name="lang" required="1"/>
                                    <field name="customer"/>
                                    <field name="is_vector" />
                                    <field name="supplier"/>
                                </group>
                            </page>
                        </notebook>
                        <notebook colspan="4">
                            <page string="Accounting">
                                <group col="4" colspan="4">
                                    <field name="property_account_position" required="1"/>
                                    <field name="vat" required="1"/>    
                                    <field name="fiscalcode" required="1"/>
                                    <field name="discount_rates" on_change="onchange_discount_rates(discount_rates)"/>
                                    <field name="pay_days_fix_delivery"/>
                                    <field name="pay_days_m1"/>
                                    <field name="pay_days_m1_days"/>
                                    <field name="pay_days_m2"/>
                                    <field name="pay_days_m2_days"/>
                                    <field name="credit_limit"/>
                                    <field name="bank_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>        
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_create_new_partner">
        <field name="name">New Partner</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_res_partner_input_form"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>
    <menuitem 
        parent="base.menu_partner_form" 
        id="menu_create_new_partner" 
        action="action_create_new_partner"/>
    
    </data>
</openerp>

