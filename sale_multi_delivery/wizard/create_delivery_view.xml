<openerp>
    <data>
       <!-- create.sale.order.delivery.wizard -->
       <record id="create_sale_order_delivery_wizard_view" model="ir.ui.view">
            <field name="name">Create production order</field>
            <field name="model">create.sale.order.delivery.wizard</field>
            <field name="arch" type="xml">
                <form string="Create delivery" version="7.0">
                   <header>
                       <button string="Cancel" special="cancel" />
                       <button name="action_create_delivery_order" string="Create" type="object" icon="gtk-jump-to" class="oe_highlight" attrs="{'invisible':[('error','=',True)]}"/>
                   </header>              
                   <group colspan="4" col="2">
                        <separator string="Orders:" />
                        <field name="note" nolabel="1"/>

                        <separator string="Orders:" />
                        <field name="order_list" widget="html" nolabel="1"/>

                        <separator string="Error:" attrs="{'invisible': [('error', '=', False)]}"/>
                        <field name="error" nolabel="1" attrs="{'invisible': [('error', '=', False)]}" />
                   </group>
                </form>
            </field>
      </record>

    <act_window
        id="act_create_sale_order_delivery_wizard_view"
        name="Create delivery order"
        view_mode="form"
        target="new"
        res_model="create.sale.order.delivery.wizard"
        key2="client_action_multi"
        src_model="sale.order"/>

